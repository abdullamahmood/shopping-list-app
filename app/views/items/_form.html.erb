<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :street %>
  <%= f.text_field :street %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :post_code %>
  <%= f.text_field :post_code %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.hidden_field :completed, value: false %>
  <%= f.submit %>
<% end %>
