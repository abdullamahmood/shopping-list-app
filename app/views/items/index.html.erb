<% if @items.any? %>
  <% @items.each do |item| %>
      <h2> <%= link_to item.name, item_path(item) %> </h2>
      <%= item.description %>
      <br>
      <%= link_to "Edit #{item.name}", edit_item_path(item) %>
      <br>
      <%= link_to "Delete #{item.name}", item_path(item), method: :delete %>
  <% end %>
  <% else %>
    No items yet
  <% end %>

<a href= "<%= new_item_path %>">Add an item</a>
